(define cond
  (lambda (form)
	(if form
	  (list (quote if)
			(car form)
			(car (cdr form))
			(cond (cdr (cdr form))))
	  nil)))

(define case
  (lambda (expr form)
	((lambda (e)
	   (if form
		 `(if (or (eq ,(car form) t) (equal ,(car form) ,e))
			,(car (cdr form))
			,(case expr (cdr (cdr form))))
		 nil))
	 expr)))

(define not (lambda (a) (if a nil t)))

(define some
  (lambda (pred coll)
	(if coll
	  (if (pred (car coll))
		t
		(some pred (cdr coll)))
	  nil)))

(define every
  (lambda (pred coll)
	(if coll
	  (if (not (pred (car coll)))
		nil
		(every pred (cdr coll)))
	  t)))

(define shallow-copy
  (lambda (coll)
	(if (atom coll)
	  coll
	  (cons (car coll) (copy (cdr coll))))))

(define copy
  (lambda (coll)
	(if (atom coll)
	  coll
	  (cons (copy (car coll)) (copy (cdr coll))))))

(define zip
  (lambda (colla collb)
	(if (and colla collb)
	  (cons (cons (car colla) (car collb))
			(zip (cdr colla) (cdr collb)))
	  nil)))

