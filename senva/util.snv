(define append1 (lambda (colla collb) (nconc (copy colla) (copy collb))))

(define append
  (lambda colls
	(reduce (lambda (acc e) (append1 e acc)) (reverse colls) nil)))

(define mapcat
  (lambda (func coll)
	(if coll
	  (append1 (func (car coll)) (mapcat func (cdr coll)))
	  nil)))

